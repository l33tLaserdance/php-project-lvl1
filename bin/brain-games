#!/usr/bin/env php
<?php
	echo 'Welcome to the Brain Games!', PHP_EOL;
	echo 'May I have your name? ';
	$name = trim(fgets(STDIN));
	if ($name == 'no') {
		echo 'Fuck you', PHP_EOL;
	}
	if ($name == 'yes') {
		echo 'Che yes, ya tebya imya prosil vvesti!!', PHP_EOL;
	}
	echo "Hello, {$name}!", PHP_EOL;
?>
